<Window x:Class="CookingBook.Windows.RecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe" Height="500" Width="500">


    <Grid Name="MainGrid" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--Recipie Names Panel-->
        <ScrollViewer Name="RecipeSV" CanContentScroll="True" Grid.Column="0">
            <ListView Name="RecipeListViev"  MouseUp="getSelectedItem" >
                <ListView.View>
                    <GridView AllowsColumnReorder="True">
                        <GridView.Columns>
                            <GridViewColumn  Width="auto" Header="{Binding Recipe}"
                                             DisplayMemberBinding="{Binding Name}" />
                            <GridViewColumn  Width="auto" Header= "{Binding Value}"
                                             DisplayMemberBinding="{Binding Persons}"/>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>
        <GridSplitter Grid.Column ="0" Width ="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        
        <Grid Background="Black" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <RichTextBox Name="RecipeRichTextBox" Background="AliceBlue" Margin="1,1">
                <FlowDocument >
                    <Paragraph>
                        <Run Name="RecipeText" />
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </Grid>

       
        <!--Resources of the reciepe Names Panel-->
        <Grid  Grid.Row="1" Grid.Column="1" Margin="1,1">
           
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Button Content="{Binding Add}" HorizontalAlignment="Left" Margin="10,10,-3,0" VerticalAlignment="Top" Width="auto" MinWidth="50"/>
            
            <Button Content="{Binding Update}" HorizontalAlignment="Left" Margin="10,10,-3,0" VerticalAlignment="Center" Width="auto" MinWidth="50"/>
            
            <Button Content="{Binding Delete}" HorizontalAlignment="Left" Margin="10,10,-3,0" VerticalAlignment="Bottom" Width="auto" MinWidth="50"/>
            
            <TextBox HorizontalAlignment="Stretch" Grid.Column="1" Text="TextBlock" VerticalAlignment="Center" Margin="10,10,3,2"/>

            <TextBox HorizontalAlignment="Right" Grid.Column="1" Text="TextBlock" VerticalAlignment="Bottom" MinWidth="200" MaxWidth="300" Width="auto" Margin="10,10,3,2"/>
            <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,14,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top"/>
        </Grid>
        <!--Reciepe Text-->
        <Grid Grid.Column="0" Grid.Row="1">
            <ScrollViewer Name="ComponentsInSV" CanContentScroll="True" Grid.Column="0">
                <ListView Name="ComponentsInViev">
                    <ListView.View>
                        <GridView AllowsColumnReorder="True">
                            <GridView.Columns>
                                <GridViewColumn  Width="auto" Header="{Binding Recipe}"
                                             DisplayMemberBinding="{Binding Name}" />
                                <GridViewColumn  Width="auto" Header= "{Binding Value}"
                                             DisplayMemberBinding="{Binding Persons}"/>
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>
            </ScrollViewer>
            <GridSplitter Grid.Column ="0" Width ="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        </Grid>
        <!--Text Change-->
        
    </Grid>
    
</Window>
